providers:
  docker:
    # Need to configure label traefik.enable=true.
    exposedByDefault: false
    # All traefik-enabled containers must be on this network.
    network: vaultwarden_web
  file:
    directory: /etc/traefik
    watch: true

api:
  dashboard: true

# docker exec traefik traefik healthcheck
ping: {}

log:
  level: DEBUG

entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: https
          scheme: https
          permanent: true

  https:
    address: ":443"
    http:
      tls: {}