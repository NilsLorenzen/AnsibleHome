networks:
  default:

services:
  app:
    container_name: pihole
    image: pihole/pihole:latest
    ports:
      - 53:53/tcp
      - 53:53/udp
      #- 67:67/udp # Only required if you are using Pi-hole as your DHCP server
      - 8080:80/tcp
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - {{ root }}/data:/etc/pihole
      - {{ root }}/dnsmasq.d:/etc/dnsmasq.d
