providers:
  docker:
    endpoint: "http://docker_socket_proxy:2375" # Docker socket proxy needed
    exposedByDefault: false # Need to configure label traefik.enable=true.
    network: web # All traefik-enabled containers must be on this network.
  file:
    directory: /etc/traefik/dynamic
    watch: true

api:
  dashboard: true

# docker exec traefik traefik healthcheck
ping: {}

experimental:
  plugins:
    crowdsec-bouncer-traefik-plugin:
      moduleName: "github.com/maxlerebourg/crowdsec-bouncer-traefik-plugin"
      version: "v1.4.0"

log:
  level: INFO

accessLog:
  filePath: "/logs/access_traefik.log"
  format: json
  filters:
    statusCodes:
      - "200" # log successful http requests
      - "400-599" # log failed http requests
    retryAttempts: true
    #minDuration: "10ms"
  # collect logs as in-memory buffer before writing into log file
  bufferingSize: 100
  fields:
    headers:
      defaultMode: keep # drop all headers per default
      names:
          StartUTC: drop
          User-Agent: keep # log user agent strings

entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: https
          scheme: https
          permanent: true

  https:
    address: ":443"
    http:
      tls:
        certResolver: letsencrypt_http

certificatesResolvers:
  letsencrypt_http:
    acme:
      email: {{ inwx.acme_email }}
      storage: /etc/traefik/acme/le.json
      httpChallenge:
        entrypoint: http