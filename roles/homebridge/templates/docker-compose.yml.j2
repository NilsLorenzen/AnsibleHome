services:
  app:
    image: homebridge/homebridge:latest
    network_mode: host
    container_name: homebridge
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - {{ root }}/homebridge-data:/homebridge
    logging:
      driver: json-file
      options:
        max-size: "10mb"
        max-file: "1"